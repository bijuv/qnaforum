<div class="navbar navbar-fixed">
		<div class="navbar-inner">
			<h1 align="center">Welcome to Q & A Forum</h1>
			<%= button_to 'Ask', new_query_path %>
			<%= link_to "HOME", :controller => 'queries', :action => 'index'%>
		</div>
</div>
<div class="slider navbar">
	<% if session[:user_id]%>
		<% @user= User.find_by_email(session[:user_id]) %>
		Welcome <%= @user.name %>&nbsp;
		Karma= <%= @user.karma %>
		<%=button_to "Logout",:controller => 'users',:action=> 'logout',:class => 'btn btn-mini btn-danger'%>
	<% else %>
		<table>
		<%= form_for(:user, :url => {:controller => "users", :action => "login", :class => 'btn btn-mini btn-danger'}) do |f|%>
			<tr><%= f.label :"e-mail:"%></tr>
			<tr><%= f.text_field :email%></tr>
			<tr><%= f.label :"password:"%></tr>
			<tr><%= f.password_field :password%></tr>
			<tr><%= f.submit "Login/Register"%></tr>
		<%end%>
		</table>
</div>
		</div>
		<a href="#" id="show_login">Login / Register</a>
		<script> 
			$(document).ready(function() {
				$(".slider").hide();
			});
			$("#show_login").click(function () {
   		   			$(".slider").slideToggle('slow');
    		});
		</script>

	<%end%>
</div>




